{
  "name": "vscode-extension-quick-grep",
  "description": "Quick Grep by Git Grep/Ripgrep",
  "version": "0.1.0",
  "publisher": "sangsoonam",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sangsoonam/vscode-extension-quick-grep"
  },
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:quickgrep.action"
  ],
  "contributes": {
    "commands": [
      {
        "command": "quickgrep.action",
        "title": "Quick Grep"
      }
    ],
    "keybindings": [
      {
        "command": "quickgrep.action",
        "key": "cmd+e"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Quick Grep Configuration",
      "properties": {
        "quickgrep.preview": {
          "type": "boolean",
          "default": false,
          "description": "Show the preview when the item is selected."
        },
        "quickgrep.grep": {
          "type": "string",
          "enum": [
            "Git Grep",
            "Ripgrep"
          ],
          "description": "Select a command to grep. Git grep only works within a git repository.",
          "default": "Git Grep"
        }
      }
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -w -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^8.13.0",
    "typescript": "^4.7.4",
    "typescript-tslint-plugin": "^1.0.2"
  },
  "dependencies": {
    "shell-quote": "^1.7.3"
  }
}
